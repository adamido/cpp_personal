#include <iostream>

int main() {
    std::uint64_t userInput;
    std::cout << "Please enter a number: ";
    std::cin >> userInput;
    std::uint64_t factorial = userInput;
    for(auto i = userInput - 1; i > 1; --i) { 
        factorial *= i; //factorial = factorial * i  
    }
    std::cout << "the factorial of " << userInput << " is " << factorial << std::endl;

    return 0;
}

